<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView

            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:id="@+id/imageviewSearchbaihat"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/textviewsearchtenbaihat"
            android:textColor="#F8F5F5"
            android:text="Ten bai hat"
            android:layout_toRightOf="@+id/imageviewSearchbaihat"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
            <TextView
            android:id="@+id/textviewsearchcasi"
            android:textColor="#FFFFFF"
            android:text="Ten ca si"
                android:layout_below="@+id/textviewsearchtenbaihat"
            android:layout_toRightOf="@+id/imageviewSearchbaihat"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/luotthich3"
            android:id="@+id/imageviewSearchluotthich"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
</RelativeLayout>