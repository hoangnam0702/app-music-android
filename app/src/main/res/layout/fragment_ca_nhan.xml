<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_mau_canhan"
    >

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageviewtrangcanhan"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/vku"></ImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageviewcircle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/imageviewtrangcanhan"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="124dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="137dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/canhannam"
        app:civ_border_color="#000000"
        app:civ_border_width="2dp" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/textcanhan1"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:text="NGUYỄN ĐỨC HOÀNG NAM"
        android:layout_below="@+id/imageviewtrangcanhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:textColor="#000000"
        android:id="@+id/textcanhan2"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:text="MSV:18IT157"
        android:layout_below="@+id/textcanhan1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:textColor="#000000"
        android:id="@+id/textcanhan3"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:text="Lớp:18IT3"
        android:layout_below="@+id/textcanhan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:textColor="#000000"
        android:id="@+id/textcanhan4"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:text="Khoa CNTT và TT"
        android:layout_below="@+id/textcanhan3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:textColor="#000000"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:text="Đại học CNTT và TT Việt Hàn"
        android:layout_below="@+id/textcanhan4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

</RelativeLayout>